<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/newbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/padding5dp"
            android:layout_marginLeft="@dimen/padding5dp"
            android:layout_marginRight="@dimen/padding5dp"
            android:layout_marginTop="@dimen/padding10dp"
            android:background="@color/white"
            android:elevation="@dimen/padding10dp">

            <RelativeLayout
                android:id="@+id/rlCardView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingRight="@dimen/padding5dp"

                >

                <View
                    android:id="@+id/viewColor"
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/viewColor">

                    <RelativeLayout
                        android:id="@+id/rlMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding5dp">

                        <RelativeLayout
                            android:id="@+id/rlArtist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/btnApply">

                            <TextView
                                android:id="@+id/tvJob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Need singer for 2 days in cafe"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/textSizeHeader" />

                            <TextView
                                android:id="@+id/tvDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvJob"
                                android:layout_marginTop="@dimen/padding5dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textSize="@dimen/textSizeExtraSmall" />

                            <RelativeLayout
                                android:id="@+id/rlPriceKM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDesc"
                                android:layout_marginTop="@dimen/padding5dp">


                                <TextView
                                    android:id="@+id/tvBudget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/padding5dp"
                                    android:text="10k budget"
                                    android:textColor="@color/budgetColor"
                                    android:textSize="@dimen/textSizeExtraSmall" />

                                <ImageView
                                    android:id="@+id/ivTime"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/padding5dp"
                                    android:layout_toRightOf="@+id/tvBudget" />


                                <TextView
                                    android:id="@+id/tvTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/padding5dp"
                                    android:layout_toRightOf="@+id/ivTime"

                                    android:text="Part Time"
                                    android:textColor="@color/cancelColor"
                                    android:textSize="@dimen/textSizeExtraSmall" />

                                <ImageView
                                    android:id="@+id/ivKm"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_centerVertical="true"

                                    android:layout_marginRight="@dimen/padding5dp"
                                    android:layout_toRightOf="@+id/tvTime"
                                    android:src="@drawable/mappin_skilli" />


                                <TextView
                                    android:id="@+id/tvPlace"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:ellipsize="marquee"
                                    android:maxLines="2"
                                    android:minLines="2"
                                    android:layout_toRightOf="@+id/ivKm"
                                    android:text="Goa,India"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSizeExtraSmall" />


                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/padding5dp"
                            android:textColor="@color/blue_btn_bg_color"
                            android:textSize="@dimen/textSizeButton" />

                        <Button
                            android:id="@+id/btnApply"
                            android:layout_width="70dp"
                            android:layout_height="@dimen/buttonExtraSmallHeight"
                            android:layout_alignParentRight="true"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/padding5dp"
                            android:background="@drawable/blue_button_background"
                            android:minHeight="1dp"
                            android:minWidth="1dp"
                            android:text="Apply"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSizeButton" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/viewLineHeight"
                        android:layout_below="@+id/rlMain"
                        android:layout_marginBottom="@dimen/padding5dp"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:background="@color/viewLine" />

                    <RelativeLayout
                        android:id="@+id/rlRecruiterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewLine">

                        <com.securesurveillance.skili.utility.RoundedImageView
                            android:id="@+id/artistPic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user_profile" />

                        <TextView
                            android:id="@+id/tvRecruiterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/padding5dp"
                            android:layout_toRightOf="@+id/artistPic"
                            android:text="Ayushman Khurana"
                            android:textSize="@dimen/textSize" />

                        <!--<ImageView-->
                            <!--android:id="@+id/ivDots"-->
                            <!--android:layout_width="24dp"-->
                            <!--android:layout_height="24dp"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:src="@drawable/artistdots" />-->
                        <TextView
                            android:id="@+id/tvConnect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="+ CHAT"
                            android:textAllCaps="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/lightblue_button"
                            android:textSize="@dimen/textSizeButton" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
</RelativeLayout>