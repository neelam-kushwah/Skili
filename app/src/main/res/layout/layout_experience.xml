<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/activity_common_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnRegister"
        android:layout_below="@+id/header"

        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding15dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etProfileTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Profile title"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salary"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etTotalExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total experience in years"
                android:inputType="number"

                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etNoticePeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notice period in days"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding15dp"
        android:background="@color/colorOrange"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

</RelativeLayout>