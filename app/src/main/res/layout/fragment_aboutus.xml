<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/header_blue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_mark" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeader"
        android:orientation="vertical"
        android:padding="@dimen/padding10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding20dp"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/padding10dp"
            android:paddingLeft="@dimen/padding10dp"
            android:text="There is only one boss. The customer. And he can fire everybody in the company from the chairman on down, simply by spending his money somewhere else."
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewLineHeight"
            android:layout_marginTop="30dp"
            android:background="@color/viewLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Email Us"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textSizeButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp"
            android:text="support@skili.com"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeExtraSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding20dp"
            android:text="Call Us"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textSizeButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp"
            android:text="7977517951/7042699030"
            android:visibility="gone"

            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeExtraSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding20dp"
            android:visibility="gone"

            android:text="Address"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textSizeButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp"
            android:text="River Dale F 702, Casa Rio, Palava"
            android:visibility="gone"

            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeExtraSmall" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp"
            android:text="Get social with Us."
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/textSizeExtraSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSocial"
            android:orientation="horizontal"
            android:padding="@dimen/padding5dp">

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/ivFb"
                android:layout_height="30dp"
                android:src="@drawable/about_icon_facebook" />

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="@dimen/padding15dp"
                android:layout_marginRight="@dimen/padding15dp"
                android:id="@+id/ivEmail"
                android:layout_height="30dp"
                android:src="@drawable/about_icon_email" />

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/ivInsta"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/padding15dp"
                android:src="@drawable/about_icon_instagram" />

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/ivTwitter"
                android:layout_height="30dp"
                android:src="@drawable/about_icon_twitter" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

