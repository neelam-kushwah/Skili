<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnRegister"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding15dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Job title,skills"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Experience"
                android:inputType="text"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:hint="Salary"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etFunctionalArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:hint="Functional Area"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlJobIndustry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5dp">

            <EditText
                android:id="@+id/etJobIndustry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:hint="Job Industry"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonHeight"
            android:background="@null"
            android:text="Clear All"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/textSizeButton"
            android:textAllCaps="false"
            android:layout_gravity="right"/>



    </LinearLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding15dp"
        android:background="@color/colorOrange"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="Search Candidates"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

</RelativeLayout>