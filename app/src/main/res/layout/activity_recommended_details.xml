<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toolbargradient"
                android:padding="@dimen/padding10dp">

                <ImageView
                    android:id="@+id/iv_LeftOption"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/backicon" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="bottom">


                    <TextView
                        android:id="@+id/tvDesignation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sr. Android Developer"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDesignation"
                        android:text="Reliance Jio Infocomm Ltd."
                        android:textColor="@color/offWhite"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted on"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvPostedOn"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:text="2018-07-06"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/tvExperience"
                        android:text="3 to 5 yrs"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/padding5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/tvLocation"
                        android:text="Pune"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/tvSalary"
                        android:text="Not mentioned"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/tvSkills"
                        android:text="Not mentioned"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/viewLineHeight"
                android:background="@color/viewLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDescription"
                    android:layout_marginTop="@dimen/padding5dp"
                    android:text="Deep understanding of Android SDK, Java and building apps for a wide range of devices. Demonstrated ability to implement to implement UI frameworks and UX that o beyond UI element. Strong experience in integration of Restful webservices."
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSizeButton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding10dp"
                    android:text="Employer Details"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvEmployer"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5dp"
                    android:text="Relinace Jio Infocomm Ltd."
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSizeButton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding10dp"
                    android:text="Other Details"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/textSize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/padding5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Functional area"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvFunctional"
                        android:layout_marginLeft="120dp"
                        android:text="Web / Mobile Technologies"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/padding5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Industry"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/tvIndustry"
                        android:text="IT-Software"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other skills"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSizeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvOtherSkills"
                        android:layout_marginLeft="120dp"
                        android:text="HTML5 good knowledge, good communication skills"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeButton" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>