<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newbg"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/activity_common_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSubmit"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Personal Information"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSizeHeader" />

                <ImageView
                    android:id="@+id/ivUpdateBasicDetails"
                    android:layout_width="@dimen/sliderIconHeight"
                    android:layout_height="@dimen/sliderIconHeight"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding5dp"
                android:layout_marginLeft="@dimen/padding5dp"
                android:layout_marginRight="@dimen/padding5dp"
                android:layout_marginTop="@dimen/padding5dp"
                android:background="@color/white"
                android:elevation="@dimen/padding10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JayKant Seekre"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/tvEmailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Email"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/tvMobileLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Phone / Mobile no"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7977517951"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <LinearLayout
                        android:id="@+id/llDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvdobLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5dp"
                            android:text="Date of Birth"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textSizeExtraSmall" />

                        <TextView
                            android:id="@+id/tvdob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31-05-1993"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Pay Scale"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/tvWebsiteLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Web url"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/tvOrgLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Company name"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvOrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvGSTNLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="GSTN"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvGSTN"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvAddressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Address"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andher East"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="City"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mumbai"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/rlSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Media"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSizeHeader" />

                <TextView
                    android:id="@+id/ivSocialMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Add"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSize" />


            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cvSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding5dp"
                android:layout_marginLeft="@dimen/padding5dp"
                android:layout_marginRight="@dimen/padding5dp"
                android:layout_marginTop="@dimen/padding5dp"
                android:background="@color/white"
                android:elevation="@dimen/padding10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding10dp">

                    <TextView
                        android:id="@+id/tvFbUrlLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook Url"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvFbUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/tvInstaUrlLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Instagram Url"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvInstaUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/tvTwitterUrlLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5dp"
                        android:text="Linkedin Url"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSizeExtraSmall" />

                    <TextView
                        android:id="@+id/tvTwitterUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/textSize" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/rlEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Education"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSizeHeader" />

                <TextView
                    android:id="@+id/ivUpdateEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Add"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSize" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llCardViewEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSizeHeader" />

                <TextView
                    android:id="@+id/ivUpdateExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Add"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSize" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llCardViewExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/padding10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSizeHeader" />

                <TextView
                    android:id="@+id/ivUpdateSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Add"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/textSize" />

            </RelativeLayout>

            <com.securesurveillance.skili.utility.ExpandableRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding15dp"
        android:background="@color/colorOrange"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/textSizeButton" />
</RelativeLayout>