<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:background="@color/newbg"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs"
        />

    <com.securesurveillance.skili.utility.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/tabbackground_color"
        android:padding="@dimen/padding5dp"
        app:pstsDividerColor="@color/tabbackground_color"
        app:pstsIndicatorColor="@color/yellow"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="@dimen/padding5dp"
        app:pstsTabPaddingTopBottom="@dimen/padding5dp"
        app:pstsTabSelectColor="@color/yellow"
        app:pstsTabTextSize="@dimen/textSizeButton"
        app:pstsTabTextStyle="normal"
        app:pstsTabUnSelectColor="@color/white" />
</RelativeLayout>