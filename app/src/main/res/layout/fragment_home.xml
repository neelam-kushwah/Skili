<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">



    <com.securesurveillance.skili.utility.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbargradient"
        app:pstsDividerColor="@color/white"
        app:pstsIndicatorColor="@color/white"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="@dimen/padding5dp"
        app:pstsTabPaddingTopBottom="@dimen/padding5dp"
        app:pstsTabSelectColor="@color/white"
        app:pstsTabTextSize="@dimen/textSize"
        app:pstsTabTextStyle="normal"
        app:pstsTabUnSelectColor="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs" />
</LinearLayout>